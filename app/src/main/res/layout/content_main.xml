<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adneom.testplanpie.MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical">

    <!-- first chart -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.txusballesteros.widgets.FitChart
                android:id="@+id/fitchartone"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:strokeSize="10dp"
                app:valueStrokeColor="#81DAF5"
                app:backStrokeColor="#848484"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:textSize="60sp"
                    android:textStyle="bold"
                    android:textColor="#212121"
                    android:gravity="center"
                    android:text="82"/>

                <TextView
                    android:id="@+id/safety_score_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="200dp"
                    android:textSize="15sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:text="SAFETY SCORE" />

            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <TextView
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:text="DRIVING TIME"
                android:textColor="@color/blueText"
                android:layout_gravity="right"
                android:textSize="44px" />
            <Button
                android:id="@+id/button_time_one"
                android:layout_width="73dp"
                android:layout_height="22dp"
                android:text="24 min."
                android:background="@color/blueText"
                android:textColor="@color/centWhite"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Linear for second chart -->
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_gravity="center"
       android:layout_marginTop="15dp">

       <FrameLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">

           <com.txusballesteros.widgets.FitChart
               android:id="@+id/fitcharttwo"
               android:layout_width="200dp"
               android:layout_height="200dp"
               app:strokeSize="10dp"
               app:valueStrokeColor="#81DAF5"
               app:backStrokeColor="#848484"
               />

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_gravity="center"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/score_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:maxWidth="200dp"
                   android:textSize="60sp"
                   android:textStyle="bold"
                   android:textColor="#212121"
                   android:gravity="center"
                   android:text="78"/>

               <TextView
                   android:id="@+id/safety_score_2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:maxWidth="200dp"
                   android:textSize="15sp"
                   android:textColor="#757575"
                   android:gravity="center"
                   android:text="SAFETY SCORE" />

           </LinearLayout>
       </FrameLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_gravity="bottom">
           <TextView
               android:layout_width="76dp"
               android:layout_height="wrap_content"
               android:text="DRIVING TIME"
               android:textColor="@color/blueText"
               android:layout_gravity="right"
               android:textSize="44px" />
           <Button
               android:id="@+id/button_time_two"
               android:layout_width="match_parent"
               android:layout_height="22dp"
               android:text="68 hours."
               android:background="@color/blueText"
               android:textColor="@color/centWhite"/>
       </LinearLayout>

   </LinearLayout>

</LinearLayout>
